FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    Dp
    {
        solver 	        BiCGStab;
        preconditioner  Cholesky;

        tolerance       1e-9;
        relTol          0.1;

        minIter         1;
        maxIter         500;
    }

    "D|DD"
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-09;
        relTol          0.1;
    }

	sigmaHyd
	{
		solver          PCG;
		preconditioner  FDIC;
		tolerance       1e-09;
		relTol          0.1;
	}
}

